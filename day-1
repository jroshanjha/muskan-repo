## How many tupes of sql or other words characters in the SQL

-- 1. DDL ( Data Definition Language )
-- 2. DML ( Data Manipulate Language )
-- 3. DCL ( Data Control Language )
-- 4. TCL ( Transaction Control Language )
-- 5. DQL ( Data Query Language ) -> select

-- Create Database and table

create database sql_course;

-- if not exists
create database if not exists sql_course;
create database if not exists sql_course1;

-- Drop database
drop database sql_course;

-- if exits
drop database if exists sql_course;

-- created table

-- step:- 1
use sql_course;
create table if not exists students(
id int primary key,
name varchar(30),
age varchar(30),
gender varchar(30),
address varchar(30),
phone varchar(30),
email_id varchar(30)
);

-- step:- 2
create table if not exists sql_course1.product(
product_id int primary key ,
product_name varchar(30),
categories varchar(30),
price float ,
quantity int,
create_at date ,
update_at date
);


-- fetch the records:-

use sql_course;
select *  from students;

use sql_course1;
select * from sql_course1.product;


